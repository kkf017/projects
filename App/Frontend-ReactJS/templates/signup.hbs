            height: 100vh;
            overflow: hidden;
        }

        .center{
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -40% );
            width: 500px;
            height: 400px;
            background: white;
            border-radius: 2px;
           }

         .center h1 {
            text-align: center;
            padding: 0 0 2 0px 0;
